<resources>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:textAppearance">@style/TextLabel</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/sixteen</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingBottom">@dimen/thirty</item>
        <item name="android:color">@dimen/thirty</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="editTextStyle">@color/colorWhite</item>
    </style>

</resources>
